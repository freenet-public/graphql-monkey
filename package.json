{
  "name": "graphql-monkey",
  "version": "0.2.0",
  "description": "A test framework and CLI for running fully automated, randomized tests against any GraphQL API.",
  "keywords": [
    "graphql",
    "test",
    "testing",
    "randomized"
  ],
  "contributors": [
    "Morris Brodersen <mb@morrisbrodersen.de> (http://morrisbrodersen.de)",
    "Frederik Priede <f.priede@md.de>"
  ],
  "license": "ISC",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "graphql-monkey": "./dist/bin.js",
    "gqlm": "./dist/bin.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "tslint --project .",
    "format": "prettier --single-quote --write **/*.ts *.json",
    "test": "nyc mocha test",
    "prepare": "npm run clean && npm run build"
  },
  "nyc": {
    "extension": [
      ".js",
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "test",
      "coverage"
    ],
    "reporter": [
      "html"
    ],
    "cache": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "chance": "^1.0.18",
    "graphql": "^14.3.1",
    "minimist": "^1.2.0",
    "prettier": "^1.18.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  },
  "devDependencies": {
    "@types/chance": "^1.0.4",
    "@types/express": "^4.17.0",
    "@types/express-graphql": "^0.8.0",
    "@types/graphql": "^14.2.1",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.10",
    "@types/prettier": "^1.16.4",
    "@types/request": "^2.48.1",
    "@types/request-promise-native": "^1.0.16",
    "express": "^4.17.1",
    "express-graphql": "^0.8.0",
    "graphql-tools": "^4.0.5",
    "husky": "^2.5.0",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  }
}
